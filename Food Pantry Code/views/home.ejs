    <title>Utah Food Bank Tracker - Home</title>
    <style>
        /* Basic Styling */
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
                background-color: #e8f2f7;
            }
            
            .title {
                color: #2b7cb5;
                font-size: 2rem;
                margin-bottom: 1.5rem;
                font-weight: 700;
                text-align: center;
            }

            .subtitle {
                color: #2b7cb5;
                font-size: 1.3rem;
                font-weight: 700;
                margin-bottom: 1rem;
            }

            .text {
                color: #666;
                font-size: 0.95rem;
            }

        /* Header */
            .header {
                background: linear-gradient(135deg, #2b7cb5 0%, #4a9fd8 100%);
                padding: 1rem 2rem;
                display: flex;
                justify-content: space-between;
                align-items: center;
                box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            }

            .logo a {
                font-size: 1.75rem;
                font-weight: 700;
                color: white;
                text-decoration: none;
            }

            .nav {
                display: flex;
                gap: 2rem;
            }

            .nav a {
                color: white;
                text-decoration: none;
                font-size: 1.1rem;
                font-weight: 500;
                transition: color 0.3s;
            }

            .nav a:hover {
                color: #094067;
            }

        /* Welcome Section */
            .welcome {
                height: 500px;
                background: #356f96;
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 3rem 2rem;
            }

            .welcome-content {
                background: white;
                padding: 4rem 5rem;
                border-radius: 12px;
                box-shadow: 0 8px 32px rgba(0,0,0,0.2);
                text-align: center;
                max-width: 700px;
            }

            .welcome-title {
                color: #2b7cb5;
                font-size: 2.5rem;
                margin-bottom: 2rem;
                font-weight: 700;
            }

        /* User Selection */
            .user-selection {
                background: white;
                padding: 5rem 3rem;
                text-align: center;
            }

            .button-group {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                gap: 2rem;
                max-width: 800px;
                margin: 0 auto;
            }

            .button {
                padding: 2rem;
                border: 2px solid #e0e0e0;
                border-radius: 12px;
                text-decoration: none;
                transition: all 0.3s;
                background: white;
                display: block;
            }

            .button:hover {
                transform: translateY(-4px);
                box-shadow: 0 8px 20px rgba(43, 124, 181, 0.3);
                border-color: #2b7cb5;
            }

            .button-icon {
                font-size: 3.5rem;
                margin-bottom: 1rem;
                display: block;
            }

        /* Locations */
            .location {
                max-width: 1200px; 
                margin: 0 auto; 
                padding: 5rem 2rem;
            }

            .locations-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 2rem;
                margin-top: 2rem;
            }

            .location-card {
                background: #f8f9fa;
                padding: 2rem;
                border-radius: 8px;
                border-left: 4px solid #2b7cb5;
            }

            .location-details {
                color: #555;
                line-height: 1.8;
            }

            .location-details a {
                color: #555;
                text-decoration: underline;
                transition: color 0.3s;
                display: inline-block;
                margin-bottom: 0.5rem;
            }

            .location-details a:hover {
                color: #2b7cb5;
                text-decoration: underline;
            }

            .location-details strong {
                display: block;
                color: #333;
                margin-top: 0.75rem;
            }

        /* Responsive */
            @media (max-width: 768px) {
                .header {
                    flex-direction: column;
                    gap: 1rem;
                }

                .nav {
                    gap: 1rem;
                }

                .welcome {
                    height: auto;
                    padding: 2rem 1rem;
                }

                .welcome-content {
                    padding: 2.5rem 2rem;
                }

                .welcome-title {
                    font-size: 2rem;
                }

                .user-selection {
                    padding: 3rem 2rem;
                }

                .title {
                    font-size: 1.5rem;
                }

                .button-group {
                    grid-template-columns: 1fr;
                }

                .location {
                    padding: 3rem 1.5rem;
                }

                .locations-grid {
                    grid-template-columns: 1fr;
                }
            }
    </style>
</head>
