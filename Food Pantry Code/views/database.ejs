        }

        .search-bar input[type="text"] {
            flex: 1;
            padding: 0.75rem 1rem;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s;
            min-width: 200px;
        }

        .search-bar input[type="text"]:focus {
            outline: none;
            border-color: #2b7cb5;
            box-shadow: 0 0 0 3px rgba(43, 124, 181, 0.1);
        }

        .search-bar select {
            padding: 0.75rem 1rem;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 0.95rem;
            background: white;
            color: #333;
            cursor: pointer;
            transition: all 0.3s;
            min-width: 150px;
            text-transform: capitalize;
        }

        .search-bar select:focus {
            outline: none;
            border-color: #2b7cb5;
            box-shadow: 0 0 0 3px rgba(43, 124, 181, 0.1);
        }

        .action-buttons {
            display: flex;
            gap: 0.75rem;
            margin-left: auto;
        }

        .search-bar button,
        .btn-add {
            padding: 0.75rem 1.75rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            white-space: nowrap;
            font-size: 0.95rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .search-bar button {
            background: #2b7cb5;
            color: white;
        }

        .search-bar button:hover {
            background: #236399;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(43, 124, 181, 0.3);
        }

        .btn-add {
            background: #27ae60;
            color: white;
        }

        .btn-add:hover {
            background: #229954;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(39, 174, 96, 0.3);
        }

        .btn-add::before {
            content: '+';
            font-size: 1.2rem;
            font-weight: 700;
        }

        /* Bulk actions bar */
        .bulk-actions {
            display: none; /* shown via JS */
            justify-content: space-between;
            gap: 0.75rem;
            background: #f8f9fa;
            padding: 1rem 2rem;
            border-bottom: 1px solid #e0e0e0;
            align-items: center;
        }

        .bulk-actions span {
            font-size: 0.95rem;
            color: #555;
            font-weight: 600;
        }

        .bulk-actions-buttons {
            display: flex;
            gap: 0.75rem;
        }

        .bulk-actions button {
            padding: 0.6rem 1.5rem;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            font-size: 0.9rem;
            transition: all 0.3s;
        }

        .bulk-edit {
            background: #2b7cb5;
            color: white;
        }

        .bulk-edit:hover {
            background: #236399;
            transform: translateY(-1px);
            box-shadow: 0 3px 10px rgba(43, 124, 181, 0.3);
        }

        .bulk-delete {
            background: #e74c3c;
            color: white;
        }

        .bulk-delete:hover {
            background: #c0392b;
            transform: translateY(-1px);
            box-shadow: 0 3px 10px rgba(231, 76, 60, 0.3);
        }

        /* Table Container */
        .table-container {
            background: white;
            border-radius: 0 0 12px 12px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: #f8f9fa;
        }

        th {
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            color: #333;
            border-bottom: 2px solid #e0e0e0;
            text-transform: capitalize;
        }

        td {
            padding: 1rem;
            border-bottom: 1px solid #e0e0e0;
            color: #555;
        }

        tbody tr {
            transition: all 0.2s;
        }

        tbody tr:hover {
            background: #f8f9fa;
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

        /* Checkbox column */
        .select-cell {
            width: 50px;
            text-align: center;
        }

        .select-cell input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
            accent-color: #2b7cb5;
        }

        /* Light grey highlight for selected rows */
        tbody tr.row-selected {
            background: #e3f2fd;
        }

        tbody tr.row-selected:hover {
            background: #bbdefb;
        }

        /* No Records Message */
        .no-records {
            text-align: center;
            padding: 3rem;
            color: #999;
            font-size: 1.1rem;
        }

        /* --- POPUP (MODAL) STYLES --- */
        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.4);
            display: none; /* shown via JS */
            align-items: center;
            justify-content: center;
            z-index: 1000;
            animation: fadeIn 0.2s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .modal {
            background: #ffffff;
            border-radius: 12px;
            padding: 2rem;
            max-width: 450px;
            width: 90%;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
            animation: slideUp 0.3s ease;
        }

        @keyframes slideUp {
            from {
                transform: translateY(30px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .modal h2 {
            margin-bottom: 0.75rem;
            color: #e74c3c;
            font-size: 1.4rem;
        }

        .modal p {
            margin-bottom: 1.75rem;
            color: #555;
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .modal-actions {
            display: flex;
            justify-content: flex-end;
            gap: 0.75rem;
        }

        .modal-btn-cancel,
        .modal-btn-confirm {
            padding: 0.65rem 1.5rem;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s;
        }

        .modal-btn-cancel {
            background: #f5f5f5;
            color: #555;
            border: 1px solid #ddd;
        }

        .modal-btn-cancel:hover {
            background: #e8e8e8;
        }

        .modal-btn-confirm {
            background: #e74c3c;
            color: white;
        }

        .modal-btn-confirm:hover {
            background: #c0392b;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(231, 76, 60, 0.3);
        }

        /* Responsive */
        @media (max-width: 968px) {
            .search-bar {
                flex-direction: column;
            }

            .search-group {
                width: 100%;
                min-width: auto;
            }

            .action-buttons {
                width: 100%;
                margin-left: 0;
            }

            .action-buttons button,
            .action-buttons a {
                flex: 1;
            }
        }

        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                gap: 1rem;
            }

            .nav {
                gap: 1rem;
            }

            .container {
                padding: 0 1rem;
                margin: 1rem auto;
            }

            .title {
                font-size: 1.5rem;
            }

            .tabs {
                flex-direction: column;
            }

            .tab {
                padding: 0.75rem 1rem;
            }

            table {
                font-size: 0.85rem;
            }

            th, td {
                padding: 0.75rem 0.5rem;
            }

            .bulk-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .bulk-actions span {
                margin-bottom: 0.75rem;
            }

            .bulk-actions-buttons {
                flex-direction: column;
            }

            .bulk-actions button {
                width: 100%;
            }

            .modal {
                padding: 1.5rem;
                max-width: 95%;
            }

            .modal-actions {
                flex-direction: column-reverse;
            }

            .modal-btn-cancel,
            .modal-btn-confirm {
                width: 100%;
            }
        }
    </style>
