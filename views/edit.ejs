<!--This page will allow a user to edit an entry in the database-->
<!--It will display a customer, employee or order (depending on which is selected)-->
<!--User can then update information and submit it to the database-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Utah Food Bank Tracker - Edit</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background-color: #e8f2f7;
        }
        
        .title {
            color: #2b7cb5;
            font-size: 2rem;
            margin-bottom: 1.5rem;
            font-weight: 700;
            text-align: center;
        }

        .text {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 2rem;
        }

        /* Header */
        .header {
            background: linear-gradient(135deg, #2b7cb5 0%, #4a9fd8 100%);
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .logo a {
            font-size: 1.75rem;
            font-weight: 700;
            color: white;
            text-decoration: none;
        }

        .nav {
            display: flex;
            gap: 2rem;
        }

        .nav a {
            color: white;
            text-decoration: none;
            font-size: 1.1rem;
            font-weight: 500;
            transition: color 0.3s;
        }

        .nav a:hover {
            color: #094067;
        }

        /* Main Container */
        .container {
            max-width: 600px;
            margin: 3rem auto;
            padding: 0 1rem;
        }

        .add-card {
            background: white;
            padding: 3rem;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        }

        /* Form Styles */
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            color: #333;
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .form-label .required {
            color: #e74c3c;
        }

        .form-input,
        .form-select {
            width: 100%;
            padding: 0.875rem;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s;
            font-family: inherit;
        }

        .form-input:focus,
        .form-select:focus {
            outline: none;
            border-color: #2b7cb5;
        }

        .form-input::placeholder {
            color: #999;
        }

        .submit-btn {
            width: 100%;
            padding: 1rem;
            background: linear-gradient(135deg, #2b7cb5 0%, #4a9fd8 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            margin-top: 1rem;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(43, 124, 181, 0.3);
        }

        .submit-btn:active {
            transform: translateY(0);
        }

        .back-btn {
            display: inline-block;
            margin-top: 2rem;
            padding: 0.75rem 2rem;
            background: #6c757d;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            transition: 0.3s;
        }

        .back-btn:hover {
            background: #5a6268;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                gap: 1rem;
            }

            .add-card {
                padding: 2rem 1.5rem;
            }

            .title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="logo"><a href="/database">Utah Food Bank Tracker</a></div>
        <nav class="nav">
            <a href="/logout">Logout</a>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="add-card">
            <%if (table === "employees"){%>
                <!-- Add-Employee Form -->
                <form id="addForm" class="add-form" method="POST" action="/edit/employees/<%= user.employee_id %>">
                    <br><br>
                    <h1 class="title">Edit Employee</h1>
                    <p class="text" style="text-align: center;">
                        Please update any neccesary information for this employee.
                    </p>
                
                    <div class="form-group">
                        <label class="form-label">First Name <span class="required">*</span></label>
                        <input type="text" class="form-input" name="first_name" value="<%= user.first_name %>" autofocus required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Last Name <span class="required">*</span></label>
                        <input type="text" class="form-input" name="last_name" value="<%= user.last_name %>" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Level <span class="required">*</span></label>
                        <select class="form-select" name="level" required>
                            <option value="">Select a level</option>
                        
                            <option value="Manager" <%= user.level === 'Manager' ? 'selected' : '' %>>
                                Manager
                            </option>
                        
                            <option value="Employee" <%= user.level === 'Employee' ? 'selected' : '' %>>
                                Employee
                            </option>
                        </select>                        
                    </div>

                    <div class="form-group">
                        <label class="form-label">User Name <span class="required">*</span></label>
                        <input type="text" class="form-input" name="username" value="<%= user.username %>" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Password<span class="required">*</span></label>
                        <input type="text" class="form-input" name="password" value="<%= user.password %>" required>
                    </div>

                    <button type="submit" class="submit-btn">Edit Employee</button>
                    <a href="/database" class="back-btn">Back to Database</a>
                </form>
                </div>
            <%} else if (table === "customers"){%>
                <form id="signupForm" class="signup-form" action="/edit/customers/<%= user.customer_id %>" method="POST">
                    <br><br>
                    <h1 class="title">Edit Customer</h1>
                    <p class="text" style="text-align: center;">Please update any neccesary information for this customer.</p>

                    <div class="form-group">
                        <label class="form-label">First Name <span class="required">*</span></label>
                        <input type="text" class="form-input" name="first_name" value="<%= user.first_name %>" required autofocus>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Last Name <span class="required">*</span></label>
                        <input type="text" class="form-input" name="last_name" value="<%= user.last_name %>" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Phone Number <span class="required">*</span></label>
                        <input type="tel" class="form-input" name="phone_num" value="<%= user.phone_num %>" required>
                    </div>

                    <div class="form-group">
                            <label class="form-label">Email <span class="required">*</span></label>
                        <input type="email" class="form-input" name="email" value="<%= user.email %>" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Location <span class="required">*</span></label>
                        <select class="form-select" name="location" required>
                            <option value="">Select a location</option>
                            <option value="blanding" 
                                <%= user.location === 'blanding' ? 'selected' : '' %>>
                                Blanding
                            </option>
                            <option value="salt-lake" 
                                <%= user.location === 'salt-lake' ? 'selected' : '' %>>
                                Salt Lake
                            </option>
                            <option value="st-george" 
                                <%= user.location === 'st-george' ? 'selected' : '' %>>
                                St. George
                            </option>
                            <option value="springville" 
                                <%= user.location === 'springville' ? 'selected' : '' %>>
                                Springville
                            </option>
                        </select>
                    </div>

                    <button type="submit" class="submit-btn">Update Customer</button>
                    <a href="/database" class="back-btn">Back to Database</a>
                </form>
            <%} else { %>
                <form id="signupForm" class="signup-form" action="/edit/orders/<%= user.order_id %>" method="POST">
                    <br><br>
                    <h1 class="title">Edit Order</h1>
                    <p class="text" style="text-align: center;">Please update any neccesary information for this order.</p>

                    <div class="form-group">
                        <label class="form-label">Order Number <span class="required">*</span></label>
                        <input type="number" class="form-input" name="first_name" value="<%= user.order_id %>" required autofocus>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Customer ID<span class="required">*</span></label>
                        <input type="number" class="form-input" name="customer_id" value="<%= user.customer_id %>" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Employee ID<span class="required">*</span></label>
                        <input type="number" class="form-input" name="employee_id" value="<%= user.employee_id %>" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Quantity <span class="required">*</span></label>
                        <input type="number" class="form-input" name="quantity" value="<%= user.quantity %>" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Date <span class="required">*</span></label>
                        <input type="datetime-local" class="form-input" name="date" value="<%= user.date ? new Date(user.date).toISOString().slice(0,16) : '' %>" required>
                    </div>

                    <button type="submit" class="submit-btn">Update Order Info</button>
                    <a href="/database" class="back-btn">Back to Database</a>
                </form>
            <%}%>
        </div>
    </div>
</body>
</html>