<!--This page will allow customers to sign up-->
<!--Customers will input basic information and then it will give them a customer ID and location information-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Utah Food Bank Tracker - Sign Up</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="logo"><a href="/">Utah Food Bank Tracker</a></div>
        <nav class="nav">
            <a href="/login">Employee Login</a>
            <a href="/signUp">Customer Signup</a>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container narrow-container">
        <div class="signup-card">

            <!-- Sign-Up Form -->
            <% if (!id) { %> 
                <form id="signupForm" class="signup-form" action="/signUp" method="POST">
                    <br><br>
                    <h1 class="title">Recipient Sign-up</h1>
                    <p class="text" style="text-align: center;">Please fill out the information below to register</p>

                    <div class="form-group">
                        <label class="form-label">First Name <span class="required">*</span></label>
                        <input type="text" class="form-input" name="first_name" placeholder="Enter your first name" required autofocus>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Last Name <span class="required">*</span></label>
                        <input type="text" class="form-input" name="last_name" placeholder="Enter your last name" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Phone Number <span class="required">*</span></label>
                        <input type="tel" class="form-input" name="phone_num" placeholder="(555) 123-4567" required>
                    </div>

                    <div class="form-group">
                            <label class="form-label">Email <span class="required">*</span></label>
                        <input type="email" class="form-input" name="email" placeholder="your.email@example.com" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Location <span class="required">*</span></label>
                        <select class="form-select" name="location" required>
                            <option value="">Select a location</option>
                            <option value="blanding">Blanding</option>
                            <option value="salt-lake">Salt Lake</option>
                            <option value="st-george">St. George</option>
                            <option value="springville">Springville</option>
                        </select>
                    </div>

                    <button type="submit" class="submit-btn">Submit Registration</button>
                </form>
            <% } %>

            <!-- Success Message -->
            <% if (id) { %>
                <div id="successMessage" class="success-message show">
                    <div class="success-icon">âœ“</div>
                    <h2 class="success-title">Thank you for signing up!</h2>
                    
                    <div class="customer-id">
                        <div class="customer-id-label">Your Customer ID:</div>
                        <div class="customer-id-number"><%= id %></div>
                    </div>

                    <div class="location-info">
                        <div class="location-photo" id="locationPhoto">
                            [Food Bank Photo]
                        </div>
                        <div class="location-address" id="locationDisplay"></div>
                    </div>

                    <a href="/" class="back-btn">Return to Home</a>
                </div>
            <% } %>
        </div>
    </div>


    <script>
        // Info for locations
        const locations = {
            'blanding': {
                name: 'Blanding Food Bank',
                address: '295 E 200 N',
                city: 'Blanding, UT 84511',
                phone: '(435) 674-5498',
                hours: 'Mon-Fri 8am-5pm',
                link: 'https://maps.app.goo.gl/2v7iTwSdZHuvtKJ98',
                photo: '../photos/blanding.jpg'
            },
            'salt-lake': {
                name: 'Salt Lake City Food Bank',
                address: '3150 S 900 W',
                city: 'South Salt Lake, UT 84119',
                phone: '(801) 978-2452',
                hours: 'Mon-Fri 8am-5pm',
                link: 'https://maps.app.goo.gl/mPFJJs6xbKMm58VSA',
                photo: '../photos/slc.jpg'
            },
            'st-george': {
                name: 'St. George Food Bank',
                address: '4416 River Rd',
                city: 'St. George, UT 84790',
                phone: '(435) 656-9122',
                hours: 'Mon-Fri 8am-5pm',
                link: 'https://maps.app.goo.gl/zCjHaV9Ur62bMWnV8',
                photo: '../photos/stgeorge.jpg'
            },
            'springville': {
                name: 'Springville Food Bank',
                address: '1900 W 900 S',
                city: 'Springville, UT 84663',
                phone: '(801) 887-1277',
                hours: 'Mon-Fri 8am-5pm',
                link: 'https://maps.app.goo.gl/BZXP51WZ9tuK6zpY8',
                photo: '../photos/springville.jpg'
            }
        };
    
        // Value injected from the server
        const serverLocation = "<%= selectedLocation || '' %>";
    
        if (serverLocation && locations[serverLocation]) {
            const selectedLocation = locations[serverLocation];
    
            // Set the photo
            document.getElementById('locationPhoto').innerHTML =
                `<img src="${selectedLocation.photo}" alt="${selectedLocation.name}">`;
    
            // Set the location details
            document.getElementById('locationDisplay').innerHTML = `
                <span class="location-name">${selectedLocation.name}</span>
                <a href="${selectedLocation.link}" target="_blank" class="address-line">
                    ${selectedLocation.address}<br>
                    ${selectedLocation.city}
                </a>
                <span class="info-item">
                    <span class="info-label">Phone:</span> ${selectedLocation.phone}
                </span>
                <span class="info-item">
                    <span class="info-label">Hours:</span> ${selectedLocation.hours}
                </span>
            `;
        }
    </script>
</body>
</html>
